 THE PROJECT CODE ğŸ”¥ã€½ï¸
#include <Servo.h>

int flamePin = 2;
int smokePin = A0;
int buzzer = 8;
int pump = 7;
int smokeThreshold = 300;

Servo myServo;

void setup() {
  pinMode(flamePin, INPUT);
  pinMode(buzzer, OUTPUT);
  pinMode(pump, OUTPUT);

  myServo.attach(9);

  Serial.begin(9600);
}

void loop() {
  int flame = digitalRead(flamePin);
  int smoke = analogRead(smokePin);

  Serial.print("Smoke Level: ");
  Serial.println(smoke);

  // Fire or Smoke detected
  if (flame == LOW || smoke > smokeThreshold) {
    
    digitalWrite(buzzer, HIGH);   // Alarm ON
    digitalWrite(pump, HIGH);     // Pump ON
    
    // Servo movement (spray direction)
    myServo.write(0);
    delay(500);
    myServo.write(90);
    delay(500);
    myServo.write(180);
    delay(500);

    Serial.println("ğŸ”¥ FIRE OR SMOKE DETECTED!");
    
  } else {
    
    digitalWrite(buzzer, LOW);    // Alarm OFF
    digitalWrite(pump, LOW);      // Pump OFF
    myServo.write(90);

    Serial.println("Safe");
  }

  delay(500);
}

